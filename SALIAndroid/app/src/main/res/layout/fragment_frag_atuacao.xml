<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="64dp">
                <GridLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_veiduasrodas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desobstrução/Aspiração Via aérea"
                        android:layout_columnWeight="1"/>
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_veiligeiro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oxigénio"
                        android:layout_columnWeight="1"/>
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_maqindus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ventilação"
                        android:layout_columnWeight="1"/>
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_veipesado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ent. Endotraqueal"
                        android:layout_columnWeight="1"/>
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_comboio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acesso Venoso"
                        android:layout_columnWeight="1"/>
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_veiagricula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Compressão Cardíaca Externa"
                        android:layout_columnWeight="1"/>
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_atropelamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desfibrilhação"
                        android:layout_columnWeight="1"/>
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_armafogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pacing"
                        android:layout_columnWeight="1"/>
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_armabranca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entubação N-G/ Lavagem Gástrica"
                        android:layout_columnWeight="1"/>
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_submersao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imobilização"
                        android:layout_columnWeight="1"/>
                    <CheckBox
                        android:id="@+id/rb_ocorrencia_incidente_outra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Outra"
                        android:layout_columnWeight="1">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_ocorrencia_incidente_outro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </GridLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
        <androidx.cardview.widget.CardView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:elevation="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="cancelar"
                    android:background="#FFF"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Submeter"
                    android:background="#FFF"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>